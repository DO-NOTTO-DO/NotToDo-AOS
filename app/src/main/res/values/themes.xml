<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotToDo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/pretendard</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black_2a292d</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Cut.BottomSheetDialog</item>
    </style>
    <!--    바텀 시트 자르기-->
    <style name="ShapeAppearanceOverlay.Cut" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="ThemeOverlay.Cut.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Cut.BottomSheet</item>
    </style>

    <style name="Widget.Cut.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Cut</item>
    </style>

    <!--    탭 레이아웃 커스텀-->
    <style name="TabTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>