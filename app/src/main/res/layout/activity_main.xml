<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5"
    app:layout_constraintBottom_toTopOf="@id/fragment_container_view_home"
    tools:context=".presentation.MainActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_custom_bottom" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fbtn_home_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@color/black_2a292d"
        android:contentDescription="@string/home_add_nottodo"
        android:gravity="bottom|right"
        android:text="@string/home_add_nottodo"
        android:textColor="@color/white"
        android:theme="@style/R16"
        app:icon="@drawable/ic_add_notodo_plus"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/fragment_container_view_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_custom_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="17dp"
        app:itemTextColor="@drawable/menu_text_color_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>