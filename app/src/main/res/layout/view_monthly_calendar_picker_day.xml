<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kr.co.nottodo.view.calendar.monthly.model.DateType" />

        <variable
            name="day_item"
            type="kr.co.nottodo.view.calendar.monthly.model.MonthlyCalendarDay.DayMonthly" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_monthly_calendar_picker_select"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/circle_calendar_select"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tv_day_name"
            app:layout_constraintEnd_toEndOf="@id/tv_day_name"
            app:layout_constraintTop_toTopOf="@id/tv_day_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_day_name"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_day_name"
            style="@style/M12"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@{day_item.label}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="31" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>