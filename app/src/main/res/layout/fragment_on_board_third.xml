<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">

    <TextView
        android:id="@+id/tv_on_board_second_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="건너뛰기"
        android:theme="@style/R16"
        android:textColor="@color/gray_2_8e8e93"
        android:layout_margin="22dp"/>

    <TextView
        android:id="@+id/tv_on_board_second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두 번째,"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="84dp"
        android:layout_marginStart="20dp"
        android:theme="@style/B18"
        android:background="@color/yellow_basic_fef652"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/tv_on_board_second_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_board_third_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_on_board_second_title"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:theme="@style/R22"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_onboarding_page3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_on_board_second_desc"
        android:layout_marginTop="21dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>