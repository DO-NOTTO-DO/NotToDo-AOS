<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.schedule.addition.view.AdditionActivity">

    <TextView
        android:id="@+id/tv_add_situation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="19dp"
        android:text="상황 추가하기"
        android:textColor="@color/gray_1_626068"
        android:theme="@style/B18"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_situation_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="21dp"
        android:text="완료"
        android:textColor="@color/gray_3_c4c4c4"
        android:theme="@style/B16"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_add_situation_title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        app:layout_constraintEnd_toStartOf="@id/tv_add_situation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/gray_5_cfcfcf"
        app:layout_constraintTop_toBottomOf="@id/tv_add_situation_title" />


    <ImageView
        android:id="@+id/iv_recommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_recommand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider" />

    <TextView
        android:id="@+id/tv_nottodo_situation_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="38dp"
        android:text="낫투두가 추천하는 상황 키워드"
        app:layout_constraintStart_toEndOf="@id/iv_recommand"
        app:layout_constraintTop_toBottomOf="@id/divider" />


    <LinearLayout
        android:id="@+id/layout_addition_situation_keyword_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nottodo_situation_keyword">


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_recentuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_recentuse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_addition_situation_keyword_list" />

    <TextView
        android:id="@+id/tv_add_situation_recent_keyword_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        android:text="최근 사용한 키워드"
        app:layout_constraintStart_toEndOf="@id/iv_recentuse"
        app:layout_constraintTop_toBottomOf="@id/layout_addition_situation_keyword_list" />

    <LinearLayout
        android:id="@+id/layout_add_situation_recent_keyword_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_situation_recent_keyword_list">


    </LinearLayout>


    <EditText
        android:id="@+id/et_add_situation_write_direct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16sp"
        android:background="@drawable/rectangle_border_gray4_1"
        android:padding="15dp"
        android:hint="직접 입력하기..."
        android:textColor="@color/gray_1_626068"
        android:textColorHint="@color/gray_4_d7d7d8"
        android:theme="@style/R14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_add_situation_recent_keyword_list" />


    <TextView
        android:id="@+id/tv_add_situation_text_watcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="0/15"
        android:textColor="@color/gray_2_8e8e93"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_add_situation_write_direct" />
</androidx.constraintlayout.widget.ConstraintLayout>